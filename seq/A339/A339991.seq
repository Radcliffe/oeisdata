%p A339991 A339991 := proc(n)
%p A339991     local a,x;
%p A339991     x := n ;
%p A339991     a := 0 ;
%p A339991     while x > 1 do
%p A339991         if type(x,even) then
%p A339991             x := x/2 ;
%p A339991         elif isprime(x) then
%p A339991             x := x^2-1 ;
%p A339991         else
%p A339991             x := x-1 ;
%p A339991         end if ;
%p A339991         a := a+1 ;
%p A339991     end do:
%p A339991     a ;
%p A339991 end proc:
