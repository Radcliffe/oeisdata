%o A007953 (Smalltalk)
%o A007953 "Recursive version for general bases. Set base = 10 for this sequence."
%o A007953 digitalSum: base
%o A007953 | s |
%o A007953 base = 1 ifTrue: [^self].
%o A007953 (s := self // base) > 0
%o A007953   ifTrue: [^(s digitalSum: base) + self - (s * base)]
%o A007953   ifFalse: [^self]
