%o A336482 T_xy(max_row) = {my(N=max_row+1, x='x+O('x^N), h= prod(i=1,N, 1 + y*x^i *(1-x)/(1-2*x+x^(i+1)))); h}
%o A336482 P_xy(N) = Pol(T_xy(N), {x})
%o A336482 B_x(N) = {my(cx = deriv(P_xy(N), y), y=1); Vecrev(eval(cx))}
