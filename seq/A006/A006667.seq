%o A006667 (Python)
%o A006667 def a(n):
%o A006667     if n==1: return 0
%o A006667     x=0
%o A006667     while True:
%o A006667         if n%2==0: n/=2
%o A006667         else:
%o A006667             n = 3*n + 1
%o A006667             x+=1
%o A006667         if n<2: break
%o A006667     return x
