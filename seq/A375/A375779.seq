%p A375779 A375779 := proc(j::integer)
%p A375779     n := floor((sqrt(8*(j-1)+1)-1)/2) ;
%p A375779     m := (-1)^j*(modp(n,2)+2*floor((j-n*(n+1)/2-1+modp(n+1,2))/2)) ;
%p A375779     (n*(n+2)+m)/2 ;
%p A375779 end proc:
