%o A059095 (Python)
%o A059095 def b3(n):
%o A059095     if n == 0: return []
%o A059095     carry, trailing = [(0, 0), (0, 1), (1, -1)][n % 3]
%o A059095     return b3(n//3 + carry) + [trailing]
%o A059095 t = []
%o A059095 for n in range(50):
%o A059095     t += b3(n)
%o A059095 print(t)
