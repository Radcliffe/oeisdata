%o A342369     for n=1:max_n
%o A342369         if mod(n,3) == 2
%o A342369             a(n) = (2*n - 1)/3;
%o A342369         else
%o A342369             a(n) = 2*n;
%o A342369         end
%o A342369     end
%o A342369 end
%o A342369 (PARI) a(n) = if ((n%3)==2, (2*n - 1)/3, 2*n); \\ _Michel Marcus_, Mar 09 2021
