%o A377030 (C)
%o A377030 int p = 3;
%o A377030 int q = 19;
%o A377030 for (int t = 0;t <= 99;t++) {
%o A377030 	int closest = 999;
%o A377030 	for (int i = 0;i <= 99;i++) {
%o A377030 		int dist=abs(i * q - t * p);
%o A377030 		if (dist < closest) {
%o A377030 			closest = dist;
%o A377030 		}
%o A377030 	}
%o A377030 	printf("%i, ", closest);
%o A377030 }
