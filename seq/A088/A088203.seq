%o A088203 import Data.List (group)
%o A088203 a088203 n k = a088203_tabf !! (n-1) !! (k-1)
%o A088203 a088203_row n = a088203_tabf !! (n-1)
%o A088203 a088203_tabf = iterate
%o A088203                (concat . map (\xs -> [length xs, head xs]) . group) [2]
