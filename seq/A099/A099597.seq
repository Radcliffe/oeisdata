%p A099597 # Diplay entries by antidiagonals
%p A099597 seq(seq(T(n-k,k), k = 0..n), n = 0..10);
%p A099597 # _Peter Bala_, Aug 19 2013
%t A099597 T[_, 0] = T[0, _] = 1;
