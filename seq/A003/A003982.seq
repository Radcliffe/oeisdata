%t A003982 Table[f[n-k+1,k],{n,10},{k,n,1,-1}]//Flatten (*sequence *)
%t A003982 Table[Join[{1},Table[0,4n-1]],{n,10}]//Flatten (* _Harvey P. Dale_, Dec 21 2016 *)
%o A003982 (PARI) {a(n) = issquare(2*n + 1)}; /* _Michael Somos_, Apr 13 2005 */
