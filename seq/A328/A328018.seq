%o A328018 def first(n):
%o A328018     t = []
%o A328018     q = 0
%o A328018     for i in range(1, n+1):
%o A328018         if i % 7 == 0 or "7" in str(i):
%o A328018             q += 1
%o A328018             t.append(t[q-1])
%o A328018         else:
%o A328018             t.append(i)
