%F A081840 a(n) = floor(r*n-(2*r+1)/(r-1)) where r = 2+sqrt(3).
%t A081840 Block[{c, k}, c[_] := False; k = 0; c[0] = True; {k}~Join~Reap[Do[If[c[n], k += 3, k += 4]; c[k] = True; Sow[k], {n, 2, 120}]][[-1, 1]] ] (* _Michael De Vlieger_, Jul 02 2025 *)
