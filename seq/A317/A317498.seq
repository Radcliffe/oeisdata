%e A317498   -128,  1344,  -6048,  15120,  -22680,   20412,  -10206,   2187;
%e A317498    256, -3072,  16128, -48384,   90720, -108864,   81648, -34992,    6561;
%e A317498   -512,  6912, -41472, 145152, -326592,  489888, -489888, 314928, -118098, 19683;
%e A317498   ...
%t A317498 t[0, 0] = 1; t[n_, k_] := t[n, k] = If[n < 0 || k < 0, 0, -2 t[n - 1, k] + 3 t[n - 1, k - 1]]; Table[t[n, k], {n, 0, 9}, {k, 0, n}] // Flatten
%t A317498 t[n_, k_] := t[n, k] = ((-2)^(n - k) 3^k)/((n - k)! k!) n!;Table[t[n, k], {n, 0, 9}, {k, 0, n} ] // Flatten
%t A317498 Table[CoefficientList[(-2 + 3 x)^n, x], {n, 0, 9}] // Flatten
%o A317498 (PARI) trianglerows(n) = my(v=[]); for(k=0, n-1, v=Vec((-2+3*x)^k + O(x^(k+1))); print(v))
