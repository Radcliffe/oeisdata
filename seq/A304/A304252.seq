%t A304252 t[0, 0] = 1; t[n_, k_] := If[n < 0 || k < 0, 0, t[n - 1, k] + 6 t[n - 2, k - 1]]; Table[t[n, k], {n, 0, 13}, {k, 0, Floor[n/2]}] // Flatten (* _Robert G. Wilson v_, May 19 2018 *)
%t A304252 Table[6^k Binomial[n - k, k], {n, 0, 13}, {k, 0, Floor[n/2]}] // Flatten
%o A304252 (PARI) T(n,k) = if ((n<0) || (k<0), 0, if ((n==0) && (k==0), 1, T(n-1,k) + 6*T(n-2,k-1)));
%o A304252 tabf(nn) = for (n=0, nn, for (k=0, n\2, print1(T(n,k), ", ")); print); \\ _Michel Marcus_, May 10 2018
