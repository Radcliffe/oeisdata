%p A251107 f:= proc(i,j)
%p A251107   local Li, Lj;
%p A251107   Li:= convert(i+27,base,3)[1..3];
%p A251107   Lj:= convert(j+27,base,3)[1..3];
%p A251107   if max(Li[1],Lj[2])<=abs(Li[2]-Lj[1])
