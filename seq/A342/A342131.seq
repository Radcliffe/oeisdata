%o A342131         m = n-1;
%o A342131         if floor(m/2) == m/2
%o A342131             a(n) = (m/2)+floor(m/4);
%o A342131         else
%o A342131             a(n) = (m*3+1)/2;
%o A342131         end
%o A342131     end
%o A342131 end
