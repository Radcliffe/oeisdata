%t A027960 (* Second program *)
%t A027960 f[n_, k_]:= f[n,k]= Sum[Binomial[2*n-k+j,j]*LucasL[2*(k-n-j)], {j,0,k-n-1}];
%t A027960 A027960[n_, k_]:= LucasL[k+1] - f[n,k]*Boole[k>n];
