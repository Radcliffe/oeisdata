%t A053440 nn = 5; a = Exp[ x] - 1 ; f[list_] := Select[list, # > 0 &];Map[f, Transpose[Table[Drop[Range[0, nn]!CoefficientList[Series[a^k  Exp[x], {x, 0, nn}],x], 1], {k, 1, 5}]]] // Grid (* _Geoffrey Critzer_, Dec 20 2011 *)
