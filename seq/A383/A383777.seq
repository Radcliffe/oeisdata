%o A383777 from sympy import primefactors; mp = lambda x: (0 if x ==1 else x - min(primefactors(x)) if x%2 else 2*x+1)
%o A383777 def A383777(n, c = 0):
%o A383777     while n != 0: n = mp(n); c += 1
